{
    "variables": {
        "aws_access_key": "insert-your-access-key-here",
        "aws_secret_key": "insert-your-secret-key-here",
        "ami_regions":    "eu-west-3"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region":     "{{user `ami_regions`}}",
            "instance_type": "t2.micro",
            "ami_name": "wordpress-mysql-tier-devops-cycloid-{{timestamp}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "*ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
            "ssh_username": "ubuntu"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "max_retries": 5,
            "inline": [
                "sudo apt-get update -y && sudo apt-get upgrade -y",
                "sudo apt install python -y"
            ]
        },
        {
            "type": "ansible",
            "playbook_file": "../../ansible/playbooks/mysql.yml",
            "groups": ["web"]
        }
    ]
}
